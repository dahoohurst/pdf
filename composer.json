{
	"name": "gears/pdf",
	"description": "A PDF builder using DOCX templates.",
	"homepage": "https://github.com/hejingyuan199/pdf",
	"keywords": ["pdf", "docx", "template", "builder", "converter"],
	"license": "MIT",
	"autoload":
	{
		"psr-4":
		{
			"Gears\\": "src"
		}
	},
	"repositories": [
		{
			"type": "vcs",
			"url": "https://github.com/hejingyuan199/string"
		}
	],
	"require":
	{
		"gears/string": "dev-master",
		"gears/di": "*",
		"symfony/process": "2.*",
		"symfony/filesystem": "2.*",
		"google/apiclient": "1.*",
		"jakoch/phantomjs-installer": "3.0.0"
	},
	"require-dev":
	{
		"codegyre/robo": "*",
		"phpunit/phpunit": "4.*",
		"guzzlehttp/guzzle": "4.*",
		"sgh/pdfbox": "dev-master"
	},
	"scripts":
	{
		"post-install-cmd": ["PhantomInstaller\\Installer::installPhantomJS"],
		"post-update-cmd": ["PhantomInstaller\\Installer::installPhantomJS"]
	}
}
